<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="DataCollectorType">
  <xs:element name="ExtendedXEReaderCollector">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Session" minOccurs="1" maxOccurs="1">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Name" type="xs:string" />
              <xs:element name="OutputTable" type="xs:string" />
              <xs:element name="Definition" type="xs:string" />
              <xs:element name="Filter" type="xs:string" />
              <xs:element name="ColumnsList" type="xs:string"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="Alert" minOccurs="0" maxOccurs="unbounded">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Recipient" minOccurs="0" maxOccurs="unbounded" type="xs:string" />
			  <xs:element name="Subject" type="xs:string"/>
			  <xs:element name="Importance" type="xs:string"/>
              <xs:element name="ColumnsList" type="xs:string"/>
              <xs:element name="Filter" type="xs:string"/>
              <xs:element name="Mode" type="xs:string"/><!-- GROUPED|ATOMIC -->
              <xs:element name="Delay" type="xs:int"/>
            </xs:sequence>
            <xs:attribute name="Enabled" type="xs:boolean" use="required" />
            <xs:attribute name="WriteToWindowsLog" type="xs:boolean" use="optional" />
            <xs:attribute name="WriteToERRORLOG" type="xs:boolean" use="optional" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>